<Window x:Class="KickboksTimerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kickboks Zamanlayıcı" Height="350" Width="525">
    <Grid Background="Black">
        <TextBlock Name="TimerText" FontSize="48" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Name="StartButton" Content="Başlat" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="50,0,0,50" Width="100" Height="50" Background="Green" Foreground="White" Click="StartButton_Click"/>
        <Button Name="StopButton" Content="Durdur" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,50" Width="100" Height="50" Background="Red" Foreground="White" Click="StopButton_Click"/>
    </Grid>
</Window>
